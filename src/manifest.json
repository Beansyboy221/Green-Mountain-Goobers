{
    "manifest_version": 3,
    "name": "Gmail AutoSorter",
    "version": "1.0",
    "description": "Automatically sorts Gmail emails into user-defined categories using Gemini AI.",
    "permissions": [
        "storage",
        "notifications",
        "identity",
        "alarms"
    ],
    "host_permissions": [
        "https://mail.google.com/*",
        "https://www.googleapis.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "web_accessible_resources": [
        {
        "resources": [ "prompt.txt" ],
        "matches": [ "<all_urls>" ]
        }
    ],
    "oauth2": {
        "client_id": "1059925487922-9vts747pb0kni5fa1bqo80oa70sr9g9m.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/gmail.labels",
            "https://www.googleapis.com/auth/gmail.modify"
        ]
    }
}